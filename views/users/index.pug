extends ../layouts/common 
block content
  if errors
    each error in errors
      .alert.alert-danger= error
  h2 Users
    
  ul
      li
          span=users.name
          span &nbsp
          a(href="/users/edit/" + users.id) Edit
          span &nbsp
          a(href="/users/delete/" + users.id) Delete
      

  form(action="/users/create", method= "POST")
    input(name="name")
    button Create