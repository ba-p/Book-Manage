extends ../layouts/common
block content

  if(errors)
    each error in errors
      .alert.alert-danger= error
    
  h2 Log in

  form(action="/auth/login", method="POST")
    label Username or Email
    span &nbsp
    input(name="username", value= values ? values : "")
    div
    label Password
    span &nbsp
    input(name="password", type="password")
    button Log in